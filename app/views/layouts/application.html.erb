<!DOCTYPE html>
<html>
  <head>
    <title>スマホホーム</title>
    <%= render "layouts/rails_default" %>
  </head>

  <body>
    <%= render "layouts/header" %>
    <div class="container" style="margin-top: 20px;">
      <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
      <% end %>
    <%= yield %>
    <%= render "layouts/footer" %>
  </body>
</html>
