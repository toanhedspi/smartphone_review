                        <button class="btn btn-default" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </div>
                </div>
            </form>
                
            <ul class="nav navbar-nav navbar-right">
                <li class="nav-text"><%= link_to "商品", products_path %></li>
